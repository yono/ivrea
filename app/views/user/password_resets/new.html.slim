.col-10.offset-1
  .card
    .card-header
      .card-title パスワードリセット
    .card-body
      - if flash[:error]
        .alert.alert-danger
          = flash[:error]
      - if flash[:success]
        .alert.alert-success
          = flash[:success]
      = form_with(model: User.new, url: {action: 'create'}, method: :post, data: {remote: false}) do |form|
        .form-group
          label.col-4 メールアドレス
          = form.text_field :email
        = form.submit "送信する", class: 'btn btn-primary float-right'
